{
  "manifest_version": 3,
  "name": "One Piece Checker",
  "version": "1.0.2",
  "author": "Erwin Tran",
  "description": "An Extension which checks the newest manga release on Reddit r/OnePiece",
  "permissions": ["activeTab"],
  "icons": {"128": "icon.png"},
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "One Piece Checker"
  }
}
